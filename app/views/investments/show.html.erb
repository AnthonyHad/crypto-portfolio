
<div class="col-lg-12">

<table class = "table show">
  <thead>
    <tr>
      <th scope="col" >Date Bought at</th>
      <th scope="col">Price</th>
      <th scope="col">Amount</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr class="cards-border-invest">
    <h1 class="crypto-asset-name show-name"> <%= @coin_name %></h1>
    <%@investment.each do |investment| %>
      <% c_name = investment.coin.name %>
      <th scope ="row"><%= investment.created_at.strftime("%a, %B %d %T %P") %></th>
      <td><%= "#{number_with_precision(investment.coin_price, precision: 2, :delimiter => ',')}$" %></td>
      <td><%= "#{number_with_precision(investment.quantity, precision: 4, :delimiter => ',')} #{investment.coin.symbol}"%></td>
      <td><%= link_to edit_investment_path(investment.id), title: "Edit Transaction" do%>
          <i class="far fa-edit icon"></i>
        <% end %>
        <%= link_to investment_path(investment.id), method: :delete, data: { confirm: "Are you sure?"}, title: "Delete Transaction" do%>
        <i class="far fa-trash-alt icon"></i>
        <% end  %>
      </td>
    </tr>
   <% end %>
 </tbody>
</table>

<div class="d-flex mr-2 mt-4 flex-row justify-content-center ">
  <%= link_to "Back to Investments", investments_path, class: "btn-main"%>
</div>
 </div>
